const
  atlasName = 'AICHAhr_left.mz3'; 
  //atlasName = 'JHU.mz3';
var
  i,j,n: integer;
  msk: array of integer;
BEGIN
	RESETDEFAULTS;
	AZIMUTHELEVATION(240, 15);
	MESHLOAD(atlasName);
	n := ATLASMAXINDEX;
	for i := n downto 1 do begin
		setlength(msk, i);
		for j := 1 to i do
			msk[j-1] := j;
		ATLASHIDE(msk);
		wait(1);
	end;
	ATLASHIDE([]); //show everything
END.



